<aura:component controller="ReassignOwnerModal_Controller" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
    <aura:attribute name="touchpointMap" type="List" /> 
    <aura:attribute name="customerId" type="String" />
    <aura:attribute name="isOpen" type="Boolean" default="false" />
    <aura:attribute name="isChange" type="Boolean" />
    <aura:attribute name="valueSelected" type="String" />
    <aura:attribute name="isSCAssigned" type="Boolean" default="false" />
    <aura:attribute name="Spinner" type="boolean" default="false"/>
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="NPARecord" type="Net_Promoter_Score__c" /> 
    <aura:attribute name="isReassignCom1" type="Boolean" default="true" />
    <aura:attribute name="isReassignCom2" type="Boolean" default="true" />
	<aura:attribute name="isReassignCom3" type="Boolean" default="true" />
	<aura:attribute name="isReassignCom4" type="Boolean" default="true" />
	<aura:attribute name="isReassignCom5" type="Boolean" default="true" />

    <aura:handler name = "init" value = "{!this}" action = "{!c.doInit}"/>
    
    <!--aura:handler event="aura:waiting" action="{!c.showSpinner}"/>
    <aura:handler event="aura:doneWaiting" action="{!c.hideSpinner}"/-->
    
    <aura:registerEvent name="ReassignedValue" type="c:ReassignedValue"/>
    
    <div class = "slds-card">
     <!--loading spinner start... style=Brand Medium (blue dots)-->
     <aura:if isTrue="{!v.Spinner}">
        <div aura:id="spinnerId" class="slds-spinner_container">
           <div class="slds-spinner--brand  slds-spinner slds-spinner--large slds-is-relative" role="alert">
             <span class="slds-assistive-text">Loading</span>
             <div class="slds-spinner__dot-a"></div>
             <div class="slds-spinner__dot-b"></div>
           </div>
        </div>
     </aura:if>
  <!-- Loading spinner end-->   
    <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                <div class="slds-modal__container">
                    <!-- Modal/Popup Box Header Starts here-->
                    <header class="slds-modal__header">
                        <lightning:buttonIcon iconName="utility:close"
                                              onclick="{! c.closeModel }"
                                              alternativeText="close"
                                              variant="bare-inverse"
                                              class="slds-modal__close"/>
                    <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">
                        Choose Touchpoint and Zone {!v.isChange}
                    </h2>
                    </header>
                    <!--Modal/Popup Box Body Starts here-->
                    <div style="width:100%;height:50%;" class="slds-card slds-scrollable_y" >
                        <br />
                        <center>
                    	<!--table border = "1" style="width:80%;" class="slds-table">
                        <thead>
                            <tr>
                                <th>
                                    <center>
                                        <b>#</b>
                                    </center>
                                </th>
                                <th class="" scope="col">
                                    <center>
                                        <span>
                                            <div  title="1st Caller Name">Touchpoint</div>
                                        </span>
                                    </center>
                                </th>
                                <th class="" scope="col">
                                    <center>
                                    	<div title="Touchpoints">Zone</div>
                                    </center>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <aura:iteration items="{!v.touchpointMap}" var="touchpoint">
                                <tr>
                                    <td>
                                        
                                        <ui:inputCheckbox aura:id="rowSelectionCheckboxId" value="false" text="{!touchpoint.id}" change="{!c.onCheckboxChange}"/>   
                                        
                                    </td>
                                    <td>
                                        <div class="slds-truncate">
                                            {!touchpoint.Touchpoint_Name__c}
                                        </div>
                                    </td>
                                    <td >
                                       <div>
                                            {!touchpoint.Region__c}
                                       </div> 
                                        <br/>
                                    </td>
                                </tr>
                            </aura:iteration>
                        </tbody>
                       </table-->
                            <div style="width:60%;">
                            <lightning:select name="select" value="{!v.valueSelected}">
                                <option text="Select Value"></option>
                                <aura:iteration items="{!v.touchpointMap}" var="index">
                                    	<option text="{!index.MasterLabel}"></option>
                                    </aura:iteration>
                            </lightning:select>
                            </div>
                        
                        <br />
                        <br />
                        <div style="width:60%;">
                            <aura:if isTrue = "{!v.isReassignCom1}">
                                <lightning:textarea label="Reassign Comments 1" value = "{!v.NPARecord.Reassign_Comments_1__c}" />
                                <aura:set attribute = "else">
                                    <p style="text-align: left;">
                                        <b>Reassign Comments 1 : </b>
                                        {!v.NPARecord.Reassign_Comments_1__c}
                                    </p>
                                    <br />
                                    <br />
                                    <lightning:outputField fieldName="{!v.NPARecord.Reassign_Comments_1__c}" />
                                	<aura:if isTrue = "{!v.isReassignCom2}">
                                    	<lightning:textarea label="Reassign Comments 2" value = "{!v.NPARecord.Reassign_Comments_2__c}" />
                                        <aura:set attribute = "else">
                                            <p style="text-align: left;">
                                                <b>Reassign Comments 2 : </b>
                                                {!v.NPARecord.Reassign_Comments_2__c}
                                            </p>
                                            <br />
                                            <br />
                                            <lightning:outputField fieldName="{!v.NPARecord.Reassign_Comments_2__c}" />
                                            <aura:if isTrue = "{!v.isReassignCom3}">
                                            	<lightning:textarea label="Reassign Comments 3" value = "{!v.NPARecord.Reassign_Comments_3__c}" />
                                                <aura:set attribute = "else">
                                                    <p style="text-align: left;">
                                                        <b>Reassign Comments 3 : </b>
                                                        {!v.NPARecord.Reassign_Comments_3__c}
                                                    </p>
                                                    <br />
                                                    <br />
                                                    <lightning:outputField fieldName="{!v.NPARecord.Reassign_Comments_3__c}" />
                                                    <aura:if isTrue = "{!v.isReassignCom4}">
                                                    	<lightning:textarea label="Reassign Comments 4" value = "{!v.NPARecord.Reassign_Comments_4__c}" />
                                                        <aura:set attribute = "else">
                                                            <p style="text-align: left;">
                                                                <b>Reassign Comments 4 : </b>
                                                                {!v.NPARecord.Reassign_Comments_4__c}
                                                            </p>
                                                            <br />
                                                            <br />
                                                            <lightning:outputField fieldName="{!v.NPARecord.Reassign_Comments_4__c}" />
                                                            <aura:if isTrue = "{!v.isReassignCom5}">
                                                            	<lightning:textarea label="Reassign Comments 5" value = "{!v.NPARecord.Reassign_Comments_5__c}" />
                                                                <aura:set attribute = "else">
                                                                    <p style="text-align: left;">
                                                                        <b>Reassign Comments 5 : </b>
                                                                        {!v.NPARecord.Reassign_Comments_5__c}
                                                                    </p>
                                                                    <br />
                                                                    <br />
                                                                    <lightning:outputField fieldName="{!v.NPARecord.Reassign_Comments_5__c}" />
                                                                </aura:set>
                                                             </aura:if>
                                                        </aura:set>
                                                    </aura:if>
                                                </aura:set>
                                            </aura:if>
                                        </aura:set>
                            		</aura:if>
                                </aura:set>
                            </aura:if>
                        </div>
                        </center>
                    </div>
                    <!--Modal/Popup Box Footer Starts here-->
                    <footer class="slds-modal__footer">
                        <lightning:button variant="neutral"
                                          label="Cancel"
                                          title="Cancel"
                                          onclick="{! c.closeModel }"/>
                        <lightning:button variant="brand"
                                          label="Assign"
                                          title="Assign"
                                          onclick="{!c.saveData}"/>
                    </footer>
                </div>
            </section>
    </div>
</aura:component>