<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" 
                access="global" controller="SecondCallerNPAListController">
	<aura:attribute name="npaList" type="List" />
    
    <aura:attribute name="npsColumns" 	 type="List"/>
    <aura:attribute name="targetColumnNames" type="List"/>
    
    <aura:attribute name="npsData" 		type="sObject[]"/>
    <aura:attribute name="targetsData" 	type="sObject[]"/>
    
    <aura:attribute name="sortedBy" 		 type="String" default="Name"/>
    <aura:attribute name="sortedDirection"   type="String" default="asc"/> 
    <aura:attribute name="secondCallerName"  type="String"/>
    <aura:attribute name="npsTableName" 	 type="String"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />    
    
        <div class="slds-grid slds-grid_vertical">
    	<div>
        	<div class="slds-grid slds-wrap slds-page-header slds-align_absolute-center" >    
                <div class="slds-col slds-size_10-of-12">
                     <div class="" role="banner">
                        <span class="slds-text-heading_large">{!v.secondCallerName}</span>       
                    </div>
                </div>
                <div class="slds-col slds-size_2-of-12">
                   
                </div>
            </div>   
         </div>
         <div>
         <div class="slds-page-header" role="banner">
             <span class="slds-text-heading_medium">{!v.npsTableName}</span>       
         </div>
         <div>
              <lightning:datatable columns="{!v.npsColumns}"
                                  data="{!v.npsData}"
                                  hideCheckboxColumn="true"
                                  keyField="Id"  
                                  onsort="{!c.updateColumnSorting}"
                                  sortedBy="{!v.sortedBy}"  
                                  sortedDirection="{!v.sortedDirection}" 
                                  /> 
             </div>
         </div>
     </div>
</aura:component>